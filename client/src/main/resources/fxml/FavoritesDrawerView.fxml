<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.uninaswap.client.controller.FavoritesDrawerController"
      spacing="0" alignment="CENTER_RIGHT">

   <!-- Toggle Button -->
   <VBox alignment="CENTER">
      <Button fx:id="toggleButton" onAction="#handleToggleDrawer" 
              styleClass="drawer-toggle-button">
         <graphic>
            <ImageView fx:id="toggleIcon" fitHeight="16.0" fitWidth="16.0" 
                       preserveRatio="true">
               <image>
                  <Image url="@../images/icons/chevron-left.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </VBox>

   <!-- Drawer Container -->
   <VBox fx:id="drawerContainer" prefWidth="280" maxWidth="280" minWidth="280"
         styleClass="favorites-drawer" VBox.vgrow="ALWAYS">
      
      <!-- Drawer Header -->
      <HBox alignment="CENTER_LEFT" styleClass="drawer-header">
         <children>
            <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
               <image>
                  <Image url="@../images/icons/favorite.png" />
               </image>
               <HBox.margin>
                  <Insets right="8.0" />
               </HBox.margin>
            </ImageView>
            <Label text="Favorites &amp; Following" styleClass="drawer-title" />
         </children>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>

      <Separator />

      <!-- Expandable Sections -->
      <VBox VBox.vgrow="ALWAYS" spacing="0">
         
         <!-- Favorite Listings Section -->
         <TitledPane fx:id="favoritesPane" animated="true" collapsible="true" 
                     styleClass="drawer-titled-pane">
            <graphic>
               <HBox alignment="CENTER_LEFT" spacing="5">
                  <ImageView fitHeight="16.0" fitWidth="16.0" preserveRatio="true">
                     <image>
                        <Image url="@../images/icons/elenco_preferiti.png" />
                     </image>
                  </ImageView>
                  <Label text="Favorites" />
                  <Label fx:id="favoritesCountLabel" styleClass="drawer-count-label" />
               </HBox>
            </graphic>
            <content>
               <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                          styleClass="drawer-scroll-pane">
                  <content>
                     <VBox fx:id="favoritesContainer" spacing="5">
                        <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                     </VBox>
                  </content>
               </ScrollPane>
            </content>
         </TitledPane>

         <!-- Following Users Section -->
         <TitledPane fx:id="followingPane" animated="true" collapsible="true"
                     styleClass="drawer-titled-pane">
            <graphic>
               <HBox alignment="CENTER_LEFT" spacing="5">
                  <ImageView fitHeight="16.0" fitWidth="16.0" preserveRatio="true">
                     <image>
                        <Image url="@../images/icons/utenti_preferiti.png" />
                     </image>
                  </ImageView>
                  <Label text="Following" />
                  <Label fx:id="followingCountLabel" styleClass="drawer-count-label" />
               </HBox>
            </graphic>
            <content>
               <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                          styleClass="drawer-scroll-pane">
                  <content>
                     <VBox fx:id="followingContainer" spacing="5">
                        <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                     </VBox>
                  </content>
               </ScrollPane>
            </content>
         </TitledPane>
         
      </VBox>

   </VBox>
</HBox>