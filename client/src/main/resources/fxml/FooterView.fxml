<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>

<HBox fx:id="footer" alignment="CENTER_LEFT" prefHeight="32.0" prefWidth="769.0" styleClass="status-bar" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uninaswap.client.controller.FooterController">
  <padding>
    <Insets bottom="3.0" left="10.0" right="10.0" top="3.0" />
  </padding>
  <children>
    <Text styleClass="status-bar-text" text="%dashboard.status.ready" />
      <Region prefHeight="26.0" prefWidth="571.0" />
    <!-- Connection status -->
    <HBox alignment="CENTER" spacing="5.0">
      <children>
        <Text fx:id="connectionStatusLabel" styleClass="status-text-success" text="%label.connected" />
        <ImageView fx:id="statusIcon" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
          <!--Load by controller-->
        </ImageView>
        <!-- Flexible space -->
        <Region HBox.hgrow="ALWAYS" />
        <!-- Language selector -->
        <Label text="%label.language" />
        <ComboBox fx:id="languageComboBox" />
      </children>
    </HBox>
  </children>
</HBox>
