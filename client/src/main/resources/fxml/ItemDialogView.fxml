<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<DialogPane stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uninaswap.client.controller.ItemDialogController">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="120" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="300" />
            </columnConstraints>
            
            <!-- Name field -->
            <Label text="%item.name.label" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="nameField" promptText="%item.name.prompt" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <!-- Description field -->
            <Label text="%item.description.label" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.valignment="TOP" />
            <TextArea fx:id="descriptionField" prefRowCount="3" promptText="%item.description.prompt" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <!-- Condition field -->
            <Label text="%item.condition.label" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <ComboBox fx:id="conditionComboBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <!-- Category field -->
            <Label text="%item.category.label" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ComboBox fx:id="categoryComboBox" prefWidth="200" promptText="%item.category.prompt" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            
            <!-- Brand field -->
            <Label text="%item.brand.label" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="brandField" promptText="%item.brand.prompt" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            
            <!-- Model field -->
            <Label text="%item.model.label" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField fx:id="modelField" promptText="%item.model.prompt" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            
            <!-- Year field -->
            <Label text="%item.year.label" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <Spinner fx:id="yearSpinner" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            
            <!-- Stock field -->
            <Label text="%item.stock.label" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <Spinner fx:id="stockSpinner" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            
            <!-- Available quantity -->
            <Label text="%item.available.label" GridPane.columnIndex="0" GridPane.rowIndex="8" />
            <Label fx:id="availableValueLabel" styleClass="quantity-value" GridPane.columnIndex="1" GridPane.rowIndex="8" />
            
            <!-- Reserved quantity -->
            <Label text="%item.reserved.label" GridPane.rowIndex="9" />
            <Label fx:id="reservedValueLabel" styleClass="quantity-value" GridPane.columnIndex="1" GridPane.rowIndex="9" />
            
            <!-- Image selection -->
            <Label text="%item.image.label" GridPane.columnIndex="0" GridPane.rowIndex="10" />
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="10">
                <Button fx:id="imageButton" onAction="#handleSelectImage" text="%item.image.select" />
                <ImageView fx:id="imagePreview" fitHeight="100" fitWidth="100" preserveRatio="true" />
            </HBox>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </content>
</DialogPane>
