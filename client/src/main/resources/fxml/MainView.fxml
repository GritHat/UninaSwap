<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uninaswap.client.controller.MainController">
  <children>
    <BorderPane minHeight="600.0" minWidth="800.0">
         <center>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <VBox alignment="CENTER" minHeight="600.0" minWidth="800.0" HBox.hgrow="ALWAYS">
                     <children>
                    <VBox alignment="CENTER" styleClass="header-container" VBox.vgrow="NEVER">
                      <children>
                        <!-- Top header bar with logo and user info -->
                        <HBox alignment="CENTER" spacing="20.0" styleClass="header-top-bar">
                          <children>
                            <!-- Logo and app name -->
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                              <children>
                                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" styleClass="header-logo">
                                  <image>
                                    <Image url="@../images/logo/logo_480x480.png" />
                                  </image>
                                </ImageView>
                              </children>
                            </HBox>
                            <!-- Flexible spacer -->
                            <Region HBox.hgrow="ALWAYS" />
                            <!-- Search container -->
                            <HBox alignment="CENTER" maxWidth="400.0" minWidth="200.0" spacing="5.0" styleClass="header-search-container" HBox.hgrow="SOMETIMES">
                              <children>
                                <TextField fx:id="searchField" alignment="CENTER" promptText="%header.search.placeholder" styleClass="header-search-field" HBox.hgrow="ALWAYS" />
                                <Button fx:id="searchButton" onAction="#handleSearch" styleClass="header-search-button">
                                  <graphic>
                                    <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                      <image>
                                        <Image url="@../images/icons/search.png" />
                                      </image>
                                    </ImageView>
                                  </graphic>
                                </Button>
                              </children>
                            </HBox>
                            <!-- Quick filter buttons -->
                            <HBox alignment="CENTER" minWidth="150.0" spacing="5.0" styleClass="header-filters">
                              <children>
                                <Button fx:id="allItemsButton" onAction="#filterAll" styleClass="header-filter-button, active" text="%header.filter.all" />
                                <Button fx:id="auctionsButton" onAction="#filterAuctions" styleClass="header-filter-button" text="%header.filter.auctions" />
                                <Button fx:id="tradeButton" onAction="#filterTrade" styleClass="header-filter-button" text="%header.filter.trade" />
                              </children>
                            </HBox>
                            <!-- Flexible spacer -->
                            <Region HBox.hgrow="ALWAYS" />
                            <!-- User info section -->
                            <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="header-user-section">
                              <children>
                                <Button fx:id="favoritesButton" onAction="#toggleFavoritesDrawer" styleClass="header-icon-button">
                                    <graphic>
                                      <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                          <image>
                                            <Image url="@../images/icons/notification.png" />
                                          </image>
                                      </ImageView>
                                    </graphic>
                                </Button>
                                <!-- Quick actions -->
                                <Button fx:id="notificationsButton" onAction="#showNotifications" styleClass="header-icon-button">
                                  <graphic>
                                    <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                      <image>
                                        <Image url="@../images/icons/notification.png" />
                                      </image>
                                    </ImageView>
                                  </graphic>
                                </Button>
                                <Button fx:id="userMenuButton" onAction="#showUserMenu" styleClass="header-icon-button">
                                  <graphic>
                                    <ImageView fx:id="userAvatarImage" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" styleClass="header-user-avatar">
                                      <image>
                                        <Image url="@../images/icons/default_profile.png" />
                                      </image>
                                    </ImageView>
                                  </graphic>
                                </Button>
                              </children>
                            </HBox>
                          </children>
                          <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                          </padding>
                        </HBox>
                      </children>
                    </VBox>
                    <HBox alignment="CENTER" minWidth="800.0" spacing="0.0" VBox.vgrow="ALWAYS">
                      <children>
                        <!-- Sidebar with responsive width -->
                        <fx:include fx:id="sidebarInclude" source="SidebarView.fxml" />
                        <!-- Content area that grows to fill remaining space -->
                        <StackPane fx:id="contentArea" minWidth="400.0" HBox.hgrow="ALWAYS" />                                                <!-- Favorites Drawer on the right -->
                        <fx:include fx:id="favoritesDrawerInclude" source="FavoritesDrawerView.fxml" />
                      </children>
                    </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </center>
    </BorderPane>
  </children>
</StackPane>
