<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.uninaswap.client.controller.PickupSchedulingController"
      spacing="15" prefWidth="600" prefHeight="700" styleClass="pickup-scheduling-container">
   <padding>
      <Insets top="20" right="20" bottom="20" left="20" />
   </padding>

   <!-- Header -->
   <VBox spacing="5">
      <Label fx:id="titleLabel" styleClass="title-label" text="%pickup.scheduling.title" />
      <Label fx:id="instructionsLabel" styleClass="subtitle-label" wrapText="true" text="%pickup.scheduling.instructions" />
   </VBox>

   <Separator />

   <!-- Location Section -->
   <VBox spacing="10">
      <Label fx:id="locationLabel" text="%pickup.label.location" styleClass="section-label" />
      <TextField fx:id="locationField" maxWidth="400" promptText="%pickup.location.prompt" />
   </VBox>

   <!-- Time Range Section -->
   <VBox spacing="10">
      <Label fx:id="timeRangeLabel" text="%pickup.label.time.range" styleClass="section-label" />
      <HBox spacing="10" alignment="CENTER_LEFT">
         <Label fx:id="fromLabel" text="%pickup.label.from" />
         <Spinner fx:id="startHourSpinner" prefWidth="70" />
         <Label text=":" />
         <Spinner fx:id="startMinuteSpinner" prefWidth="70" />
         
         <Label fx:id="toLabel" text="%pickup.label.to" />
         <Spinner fx:id="endHourSpinner" prefWidth="70" />
         <Label text=":" />
         <Spinner fx:id="endMinuteSpinner" prefWidth="70" />
      </HBox>
      <Label fx:id="timeHelpLabel" text="%pickup.help.time.range" 
             styleClass="help-text" wrapText="true" />
   </VBox>

   <!-- Date Selection Section -->
   <VBox spacing="10">
      <Label fx:id="availableDatesLabel" text="%pickup.label.available.dates" styleClass="section-label" />
      
      <GridPane hgap="10" vgap="10">
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         
         <Label fx:id="startDateLabel" text="%pickup.label.start.date" GridPane.columnIndex="0" GridPane.rowIndex="0" />
         <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="0" />
         
         <Label fx:id="endDateLabel" text="%pickup.label.end.date" GridPane.columnIndex="0" GridPane.rowIndex="1" />
         <DatePicker fx:id="endDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         
         <Button fx:id="addDateRangeButton" onAction="#handleAddDateRange" text="%pickup.add.dates"
                 GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.rowSpan="2" styleClass="primary-button" />
      </GridPane>
      
      <HBox spacing="10" alignment="CENTER_LEFT">
         <Label fx:id="selectedDatesCountLabel" text="%pickup.dates.selected.count" />
         <Button fx:id="clearDatesButton" onAction="#handleClearDates" text="%pickup.clear.dates" 
                 styleClass="secondary-button" />
      </HBox>
      
      <!-- Selected Dates Display -->
      <ScrollPane maxHeight="150" fitToWidth="true" styleClass="dates-scroll-pane">
         <FlowPane fx:id="selectedDatesPane" hgap="5" vgap="5">
            <padding>
               <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
         </FlowPane>
      </ScrollPane>
   </VBox>

   <!-- Details Section -->
   <VBox spacing="10">
      <Label fx:id="detailsLabel" text="%pickup.label.details" styleClass="section-label" />
      <TextArea fx:id="detailsArea" prefRowCount="3" maxWidth="400" promptText="%pickup.details.prompt" />
      <Label fx:id="detailsHelpLabel" text="%pickup.help.details" 
             styleClass="help-text" wrapText="true" />
   </VBox>

   <!-- Actions -->
   <HBox spacing="10" alignment="CENTER_RIGHT">
      <Button fx:id="cancelButton" onAction="#handleCancel" cancelButton="true" 
              text="%pickup.scheduling.cancel" styleClass="secondary-button" />
      <Button fx:id="confirmButton" onAction="#handleConfirm" defaultButton="true" 
              styleClass="primary-button" text="%pickup.scheduling.confirm" />
   </HBox>
</VBox>