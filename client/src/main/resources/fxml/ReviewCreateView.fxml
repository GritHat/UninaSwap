<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.uninaswap.client.controller.ReviewCreateController"
      spacing="20" prefWidth="500" prefHeight="600">
   <padding>
      <Insets top="20" right="20" bottom="20" left="20" />
   </padding>

   <!-- Header -->
   <VBox spacing="5">
      <Label fx:id="titleLabel" styleClass="title-label" text="%review.create.title" />
      <Label fx:id="instructionsLabel" styleClass="subtitle-label" wrapText="true" text="%review.create.instructions" />
   </VBox>

   <Separator />

   <!-- Transaction Details -->
   <VBox spacing="10">
      <Label fx:id="reviewingUserLabel" styleClass="section-label" />
      <Label fx:id="offerDetailsLabel" styleClass="info-label" wrapText="true" />
   </VBox>

   <!-- Rating Section -->
   <VBox spacing="15">
      <Label fx:id="ratingHeaderLabel" text="%review.create.rating.header" styleClass="section-label" />
      
      <VBox spacing="10" alignment="CENTER">
         <HBox fx:id="starsContainer" spacing="5" alignment="CENTER" />
         <Label fx:id="scoreLabel" styleClass="score-label" />
      </VBox>
      
      <Label fx:id="ratingHelpLabel" text="%review.create.rating.help" 
             styleClass="help-text" alignment="CENTER" />
   </VBox>

   <!-- Comment Section -->
   <VBox spacing="10" VBox.vgrow="ALWAYS">
      <Label fx:id="commentHeaderLabel" text="%review.create.comment.header" styleClass="section-label" />
      
      <TextArea fx:id="commentTextArea" 
                prefRowCount="6" 
                promptText="%review.create.comment.prompt"
                VBox.vgrow="ALWAYS" />
      
      <HBox alignment="CENTER_RIGHT">
         <Label fx:id="characterCountLabel" styleClass="character-count" text="%review.create.character.count" />
      </HBox>
      
      <Label fx:id="commentHelpLabel" text="%review.create.comment.help" 
             styleClass="help-text" wrapText="true" />
   </VBox>

   <!-- Actions -->
   <HBox spacing="10" alignment="CENTER_RIGHT">
      <Button fx:id="cancelButton" onAction="#handleCancel" text="%review.create.cancel" />
      <Button fx:id="submitButton" onAction="#handleSubmit" 
              styleClass="primary-button" text="%review.create.submit" />
   </HBox>
</VBox>