<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.uninaswap.client.controller.UserReviewsController"
      spacing="15" prefWidth="800" prefHeight="700" styleClass="reviews-container">
   <padding>
      <Insets top="20" right="20" bottom="20" left="20" />
   </padding>

   <!-- Header -->
   <VBox spacing="5">
      <HBox alignment="CENTER_LEFT" spacing="10">
         <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
            <image>
               <Image url="@../images/icons/reviews.png" />
            </image>
         </ImageView>
         <Label fx:id="titleLabel" styleClass="title-label" text="%reviews.title" />
      </HBox>
   </VBox>

   <Separator />

   <!-- User Rating Summary -->
   <VBox spacing="15" styleClass="rating-summary-section">
      <Label fx:id="userNameLabel" styleClass="user-name-label" text="%reviews.unknown.user" />
      
      <HBox spacing="20" alignment="CENTER_LEFT">
         <!-- Overall Rating -->
         <VBox spacing="5" alignment="CENTER" styleClass="rating-display">
            <Label fx:id="averageRatingLabel" styleClass="average-rating-label" text="--" />
            <HBox fx:id="ratingStarsBox" spacing="2" alignment="CENTER" />
            <Label fx:id="totalReviewsLabel" styleClass="total-reviews-label" text="--" />
         </VBox>
         
         <!-- Rating Bar -->
         <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label fx:id="overallRatingLabel" text="%reviews.overall.rating" styleClass="section-subtitle" />
            <ProgressBar fx:id="ratingBar" prefWidth="200" styleClass="rating-progress-bar" progress="0.0" />
         </VBox>
         
         <!-- Refresh Button -->
         <Button fx:id="refreshButton" onAction="#handleRefresh" styleClass="primary-button" text="%reviews.button.refresh">
            <graphic>
               <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                  <image>
                     <Image url="@../images/icons/refresh.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
      </HBox>
   </VBox>

   <Separator />

   <!-- Reviews Tabs -->
   <TabPane fx:id="reviewsTabPane" VBox.vgrow="ALWAYS" styleClass="reviews-tab-pane">
      <tabs>
         <!-- Received Reviews Tab -->
         <Tab fx:id="receivedReviewsTab" text="%reviews.tab.received" closable="false">
            <content>
               <VBox spacing="10">
                  <TableView fx:id="receivedReviewsTable" VBox.vgrow="ALWAYS" styleClass="reviews-table">
                     <columns>
                        <TableColumn fx:id="receivedReviewerColumn" prefWidth="150" text="%reviews.column.reviewer" />
                        <TableColumn fx:id="receivedScoreColumn" prefWidth="80" text="%reviews.column.rating" />
                        <TableColumn fx:id="receivedCommentColumn" prefWidth="300" text="%reviews.column.comment" />
                        <TableColumn fx:id="receivedDateColumn" prefWidth="120" text="%reviews.column.date" />
                     </columns>
                     <placeholder>
                        <VBox alignment="CENTER" spacing="10">
                           <ImageView fitHeight="48" fitWidth="48" preserveRatio="true" opacity="0.5">
                              <image>
                                 <Image url="@../images/icons/reviews.png" />
                              </image>
                           </ImageView>
                           <Label text="%reviews.placeholder.received" styleClass="table-placeholder" />
                           <Label text="%reviews.placeholder.received.suggestion" styleClass="suggestion-text" />
                        </VBox>
                     </placeholder>
                  </TableView>
               </VBox>
            </content>
         </Tab>
         
         <!-- Given Reviews Tab -->
         <Tab fx:id="givenReviewsTab" text="%reviews.tab.given" closable="false">
            <content>
               <VBox spacing="10">
                  <TableView fx:id="givenReviewsTable" VBox.vgrow="ALWAYS" styleClass="reviews-table">
                     <columns>
                        <TableColumn fx:id="givenReviewedUserColumn" prefWidth="150" text="%reviews.column.reviewed.user" />
                        <TableColumn fx:id="givenScoreColumn" prefWidth="80" text="%reviews.column.rating" />
                        <TableColumn fx:id="givenCommentColumn" prefWidth="300" text="%reviews.column.comment" />
                        <TableColumn fx:id="givenDateColumn" prefWidth="120" text="%reviews.column.date" />
                     </columns>
                     <placeholder>
                        <VBox alignment="CENTER" spacing="10">
                           <ImageView fitHeight="48" fitWidth="48" preserveRatio="true" opacity="0.5">
                              <image>
                                 <Image url="@../images/icons/reviews.png" />
                              </image>
                           </ImageView>
                           <Label text="%reviews.placeholder.given" styleClass="table-placeholder" />
                           <Label text="%reviews.placeholder.given.suggestion" styleClass="suggestion-text" />
                        </VBox>
                     </placeholder>
                  </TableView>
               </VBox>
            </content>
         </Tab>
      </tabs>
   </TabPane>

   <!-- Review Details Section -->
   <VBox fx:id="reviewDetailsSection" spacing="10" styleClass="review-details-section" visible="false">
      <Separator />
      
      <Label fx:id="reviewDetailsLabel" text="%reviews.details.title" styleClass="section-label" />
      
      <GridPane hgap="15" vgap="10" styleClass="review-details-grid">
         <columnConstraints>
            <ColumnConstraints minWidth="100" prefWidth="120" />
            <ColumnConstraints hgrow="ALWAYS" />
         </columnConstraints>
         
         <Label fx:id="reviewerStaticLabel" text="%reviews.detail.reviewer" styleClass="detail-label" 
                GridPane.columnIndex="0" GridPane.rowIndex="0" />
         <Label fx:id="detailReviewerLabel" styleClass="detail-value" 
                GridPane.columnIndex="1" GridPane.rowIndex="0" />
         
         <Label fx:id="ratingStaticLabel" text="%reviews.detail.rating" styleClass="detail-label" 
                GridPane.columnIndex="0" GridPane.rowIndex="1" />
         <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label fx:id="detailScoreLabel" styleClass="detail-value" />
            <HBox fx:id="detailStarsBox" spacing="2" />
         </HBox>
         
         <Label fx:id="dateStaticLabel" text="%reviews.detail.date" styleClass="detail-label" 
                GridPane.columnIndex="0" GridPane.rowIndex="2" />
         <Label fx:id="detailDateLabel" styleClass="detail-value" 
                GridPane.columnIndex="1" GridPane.rowIndex="2" />
         
         <Label fx:id="commentStaticLabel" text="%reviews.detail.comment" styleClass="detail-label" 
                GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.valignment="TOP" />
         <TextArea fx:id="detailCommentArea" editable="false" prefRowCount="3" wrapText="true"
                   styleClass="detail-comment-area" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      </GridPane>
   </VBox>

   <!-- Actions -->
   <HBox spacing="10" alignment="CENTER_RIGHT">
      <Button fx:id="closeButton" onAction="#handleClose" styleClass="button" text="%reviews.button.close" />
   </HBox>
</VBox>