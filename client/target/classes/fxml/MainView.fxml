<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>
<?import javafx.*?>

<BorderPane prefWidth="800" prefHeight="600" 
      xmlns="http://javafx.com/javafx/24" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.uninaswap.client.controller.MainController"
      stylesheets="@../css/styles.css"
      minWidth="800" minHeight="640">
      
   <!-- Top Navigation Bar -->
   <top>
      <HBox spacing="10" styleClass="header-bar">
         <padding>
            <Insets top="10" right="15" bottom="10" left="15" />
         </padding>
         <Label text="%dashboard.title" styleClass="header-label" />
         <Region HBox.hgrow="ALWAYS" />
         <Label fx:id="usernameLabel" />
         <StackPane styleClass="profile-image-container" maxHeight="32" maxWidth="32" minHeight="32" minWidth="32">
            <ImageView fx:id="headerProfileImageView" fitHeight="32" fitWidth="32" preserveRatio="true" />
            <StackPane.margin>
               <Insets left="5" right="5" />
            </StackPane.margin>
         </StackPane>
         <Button fx:id="logoutButton" text="%button.logout" onAction="#handleLogout" />
      </HBox>
   </top>
   
   <!-- Left Sidebar Navigation -->
   <left>
      <VBox spacing="5" styleClass="sidebar" prefWidth="200">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
         </padding>
         <Label text="%dashboard.navigation" styleClass="sidebar-header" />
         <Separator />
         <Button text="%dashboard.dashboard" styleClass="sidebar-button" onAction="#showDashboard" />
         <Button text="%dashboard.markets" styleClass="sidebar-button" onAction="#showMarkets" />
         <Button text="%dashboard.portfolio" styleClass="sidebar-button" onAction="#showPortfolio" />
         <Button text="%dashboard.trade" styleClass="sidebar-button" onAction="#showTrade" />
         <Button text="%dashboard.settings" styleClass="sidebar-button" onAction="#showSettings" />
         <Button text="%dashboard.profile" styleClass="sidebar-button" onAction="#showProfile" />
         
         <!-- Inventory Button -->
         <Button text="%dashboard.inventory" styleClass="sidebar-button" onAction="#showInventory"/>

         <!-- Create Listing Button -->
         <Button text="%dashboard.create.listing" styleClass="sidebar-button" onAction="#showCreateListing"/>

         <Region VBox.vgrow="ALWAYS" />
         <Separator />
         <Label text="%app.version" styleClass="sidebar-footer" />
      </VBox>
   </left>
   
   <!-- Main Content Area -->
   <center>
      <StackPane fx:id="contentArea">
         <padding>
            <Insets top="15" right="15" bottom="15" left="15" />
         </padding>
         <!-- Default welcome screen -->
         <VBox alignment="CENTER" spacing="20">
            <Label text="%dashboard.contentaread.title" styleClass="welcome-header" />
            <Label text="%dashboard.contentaread.subtitle" />
            <HBox alignment="CENTER" spacing="20">
               <Button text="%button.quicktrade" onAction="#showTrade" />
               <Button text="%button.view.markets" onAction="#showMarkets" />
            </HBox>
         </VBox>
      </StackPane>
   </center>
   
   <!-- Status Bar -->
   <bottom>
      <HBox spacing="10" styleClass="status-bar">
         <padding>
            <Insets top="5" right="15" bottom="5" left="15" />
         </padding>
         <Label fx:id="statusLabel" text="%label.ready" />
         <Region HBox.hgrow="ALWAYS" />
         <Label fx:id="connectionStatusLabel" text="%label.connected" />
      </HBox>
   </bottom>
   
</BorderPane>